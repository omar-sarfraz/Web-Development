<div class="mx-auto max-w-7xl px-6 py-6 mt-12 lg:px-8 flex-col h-screen">
  <div class="px-4 sm:px-0">
    <h3 class="text-3xl font-semibold leading-7 text-gray-900">Admin Panel</h3>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Article Categories Management</p>
  </div>
  <h3 class="mt-6 pt-4 border-t text-2xl font-semibold leading-7 text-gray-900">Add a new category</h3>
  <form class="mt-2 border-gray-100" method="POST" action="/categories">
    <div class="flex">
      <input
        id="name"
        name="name"
        type="name"
        required
        placeholder="Enter New Category Name"
        class="pl-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-400 sm:text-sm sm:leading-6"
      />

      <button
        type="submit"
        class="rounded-md ml-6 bg-yellow-400 px-6 py-1 text-lg font-semibold text-white shadow-sm hover:bg-yellow-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-400"
      >
        Add
      </button>
    </div>
  </form>
  <h3 class="mt-6 pt-4 border-t text-2xl font-semibold leading-7 text-gray-900">Existing Categories</h3>
  <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">
    <span class="bold">Note:</span> Deleting a category will delete all articles in that category
  </p>
  <div class="mt-7">
    <table class="w-full">
      <thead>
        <tr class="h-16 border rounded-full">
          <td class="pl-3 font-semibold">Update Values</td>
          <td class="pl-6 font-semibold">Category Name</td>
          <td class="pr-3 font-semibold text-right"></td>
        </tr>
      </thead>
      <tbody>
        <% for( let index = 0; index < categories.length; index++ ) { %>
        <form action="/categories/update/<%= categories[index].id %>" method="post">
          <tr class="focus:outline-none h-16 border rounded-full">
            <td class="pl-3">
              <input
                id="name"
                name="name"
                type="name"
                required
                value="<%= categories[index].name %>"
                class="block w-full border-b border-gray-300 py-1.5 text-gray-900 placeholder:text-gray-400 outline-none"
              />
            </td>
            <td class="pl-6">
              <div class="flex items-center">
                <div class="text-sm font-medium leading-6 text-gray-900 rounded-full bg-yellow-400 px-5 py-1"><%= categories[index].name %></div>
              </div>
            </td>

            <td class="flex justify-end items-center h-16 pr-3">
              <a
                href="/categories/delete/<%= categories[index].id %>"
                class="rounded-md ml-6 bg-red-600 px-6 py-1 text-lg font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-500"
              >
                Delete
              </a>
              <button
                type="submit"
                class="rounded-md ml-6 bg-yellow-400 px-6 py-1 text-lg font-semibold text-white shadow-sm hover:bg-yellow-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-400"
              >
                Update
              </button>
            </td>
          </tr>
        </form>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
