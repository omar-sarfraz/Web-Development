<div class="mx-auto max-w-7xl px-6 py-6 mt-12 lg:px-8 flex-col">
  <div class="px-4 sm:px-0">
    <h3 class="text-2xl font-semibold leading-7 text-gray-900">User Profile</h3>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Personal details and articles.</p>
  </div>
  <form class="mt-6 border-t border-gray-100" >
    <dl class="divide-y divide-gray-100">
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Full name</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
          <input
            id="name"
            name="name"
            type="name"
            required
            value="<%= user.name %>"
            class="pl-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-400 sm:text-sm sm:leading-6"
          />
        </dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Email address</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
          <input
            id="name"
            name="name"
            type="name"
            required
            value="<%= user.email %>"
            class="pl-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-yellow-400 sm:text-sm sm:leading-6"
          />
        </dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Roles</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= user.role.join(",") %></dd>
      </div>
    </dl>
    <div class="flex w-full justify-end">
      <button
        type="submit"
        class="rounded-md ml-6 bg-yellow-400 px-6 py-1 text-lg font-semibold text-white shadow-sm hover:bg-yellow-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-400"
      >
        Update
      </button>
    </div>
  </form>

  <h3 class="text-2xl font-semibold leading-7 text-gray-900 pt-10">User Articles</h3>
  <% for( let index = 0; index < articles.length; index++ ) { %> <%- include('../components/long-article-card.ejs', { title: articles[index].title,
  article: articles[index].article, owner_img: user.profile_img, owner_name: user.name, date: articles[index].date, cover_img:
  articles[index].cover_img }) %> <% } %>
</div>
