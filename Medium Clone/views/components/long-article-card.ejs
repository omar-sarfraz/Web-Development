<article class="flex max-w-2xl justify-between items-start gap-6 py-6">
  <div class="flex-col">
    <div class="flex items-center gap-x-4 text-xs">
      <% let dateTime = new Date(date); %> <%= dateTime.toDateString() %>
      <a href="/categories/<%= category_id %>/1" class="relative z-10 rounded-full bg-gray-50 px-3 py-1 font-medium text-gray-600 hover:bg-gray-100"
        ><%= category %></a
      >
    </div>
    <div class="group relative">
      <h3 class="mt-2 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
        <a href="/article/<%= id %>"> <%= title.slice(0,70) %> </a>
      </h3>
      <p class="mt-2 line-clamp-3 text-sm leading-6 text-gray-600"><%= article.slice(0,200) %></p>
    </div>
    <div class="relative mt-8 flex items-center gap-x-4">
      <img src="data:image/png;base64,<%= owner_img %>" alt="" class="h-10 w-10 rounded-full bg-gray-50" />
      <div class="text-sm leading-6">
        <p class="font-semibold text-gray-900">
          <a href="/profile/<%= owner_id %>">
            <!-- <span class="absolute inset-0"></span> -->
            <%= owner_name %>
          </a>
        </p>
      </div>
    </div>
  </div>
  <img src="data:image/png;base64,<%= cover_img %>" alt="" class="h-40 w-40 object-cover object-center rounded" />
</article>
